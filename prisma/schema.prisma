
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}

model avatar{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  file_id String 
  url String
  userId String? @db.ObjectId @unique
  user user? @relation(fields: [userId], references: [id]) //! a avatar can have one user
}

model user{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  password String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  avatar avatar? 
  following String[]
}